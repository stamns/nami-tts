# Service access key (used for Authorization: Bearer <key>)
# You can also use legacy name TTS_API_KEY.
SERVICE_API_KEY=sk-nami-tts-your-secret-key

# Provider selection
DEFAULT_TTS_PROVIDER=nanoai
TTS_PROVIDER_PRIORITY=nanoai,google,azure,baidu,aliyun

# Provider credentials
# Google (gTTS) generally does not require a key; kept for future Google Cloud API support.
GOOGLE_API_KEY=

# Azure Cognitive Services (required for Azure provider)
AZURE_API_KEY=
AZURE_REGION=
# or provide a full endpoint instead of region:
AZURE_ENDPOINT=

# Baidu / Aliyun placeholders (not implemented in this repo yet)
BAIDU_API_KEY=
BAIDU_SECRET_KEY=
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=

# Network & cache
HTTP_TIMEOUT=60
RETRY_COUNT=2
PROXY_URL=
SSL_VERIFY=true
CACHE_DIR=cache
CACHE_DURATION=7200

# App
PORT=5001
DEBUG=False
LOG_LEVEL=INFO
